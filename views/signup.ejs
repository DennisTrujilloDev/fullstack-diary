<!doctype html>
<html>
<head>
    <title>Diary Sign Up</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins|Righteous|Sen&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="signup.css">
</head>
  <body>
    <header class="titleHere">
      <!-- <section class="pic">
        <a href="/"><h1>Diary</h1></a>
      </section> -->
      <section>
        <!-- <a href="/signup" class="btn btn-default">Signup</a> -->
      </section>
    </header>
    <div class="container signUpPage">
      <div class="col-sm-6 col-sm-offset-3">
        
        <a href="/login" class="btn btn-default">Login Page</a>
        <h1>Sign up</h1>

        <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
          <% } %>

          <!-- LOGIN FORM -->
          <form action="/signup" method="post">
            <div class="form-group">
              <label>Create Username</label>
              <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password">
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Signup</button>
          </form>

      </div>
    </div>
  </body>
</html>